{
  "name": "bot-flow-api",
  "version": "0.0.1",
  "description": "Bot Flow API allows users to design various bot flows.",
  "author": "furkanogutcu",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:check": "tsc --noEmit -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky",
    "pre-commit": "npm run lint & npm run build:check",
    "pre-push": "npm run lint & npm run build:check",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "db:create": "ts-node ./src/database/scripts/create-db.script",
    "db:create-admin-account": "ts-node ./src/database/scripts/create-admin-account.script.ts",
    "db:migration:run": "npm run typeorm migration:run -- -d src/database/typeorm.data-source.ts",
    "db:migration:create": "npm run typeorm -- migration:create ./src/database/migrations/$npm_config_name",
    "db:migration:generate": "npm run typeorm -- -d src/database/typeorm.data-source.ts migration:generate ./src/database/migrations/$npm_config_name",
    "db:migration:revert": "npm run typeorm -- -d src/database/typeorm.data-source.ts migration:revert",
    "db:migration:drop": "npm run typeorm -- -d src/database/typeorm.data-source.ts schema:drop"
  },
  "dependencies": {
    "@anatine/zod-nestjs": "^2.0.9",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/bullmq": "^10.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "argon2": "^0.41.1",
    "bullmq": "^5.25.1",
    "handlebars": "^4.7.8",
    "ioredis": "^5.4.1",
    "luxon": "^3.5.0",
    "ms": "^2.1.3",
    "nestjs-pino": "^4.1.0",
    "nodemailer": "^6.9.16",
    "otpauth": "^9.3.6",
    "pg": "^8.12.0",
    "pino-http": "^10.3.0",
    "reflect-metadata": "^0.2.0",
    "request-ip": "^3.3.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "ua-parser-js": "^2.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/luxon": "^3.4.2",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.16",
    "@types/request-ip": "^0.0.41",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.5",
    "jest": "^29.5.0",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
